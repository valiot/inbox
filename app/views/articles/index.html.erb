<%- model_class = Article -%>
<div class="page-header">
  <h1>Awaiting Moderation Articles</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:category_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr id="article-<%= article.id %>">
        <td><%= link_to article.id, article_path(article) %></td>
        <td><%= link_to article.link, article.link, target: :blank %></td>
        <td><%= article.status %></td>
        <td><%= article.category.name %></td>
        <td><%=l article.created_at %></td>
        <td>
          <%= link_to glyph(:ok), approve_article_path(article),
              remote: true, method: :post, class: 'btn btn-default btn-xs' %>
          <%= link_to glyph(:remove), reject_article_path(article),
              remote: true, method: :post, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_article_path,
            :class => 'btn btn-primary' %>
